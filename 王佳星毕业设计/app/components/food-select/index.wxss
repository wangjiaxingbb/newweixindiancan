/* 这里的样式只应用于这个自定义组件 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.2)
}
.mask .wrap {
  position: absolute;
  top: 50rpx;
  left: calc(50% - 250rpx);
  width: 500rpx;
  height: 700rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}
.mask .slice{
  display: block;
  width: 1rpx;
  height: 200rpx;
  border-left: 1px solid rgb(65, 65, 65);
  position: absolute;
  top: 750rpx;
  left: 50%;
}
.close{
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid rgb(65, 65, 65);
  border-radius: 50%;
  position: absolute;
  top: 950rpx;
  left: calc(50% - 20rpx);
  text-align: center;
  line-height: 40rpx;
  font-size: 12px;
}
.mask .wrap image {
  width: 100%;
  height: 350rpx;
  border-bottom: 1px solid #ccc;
  vertical-align: middle;
}
.mask .wrap .title{
  width: 100%;
  height: 50rpx;
  margin-top: 10rpx;
  line-height: 50rpx;
  padding-left:20rpx;
  box-sizing: border-box; 
  color: rgb(90, 90, 90);
  font-size: 28rpx;
}
.mask .wrap .taste{
  display: inline-block;
  color: rgb(126, 126, 126);
  font-size: 28rpx;
  padding: 0 20rpx;
  border: 1px solid rgb(126, 126, 126);
  margin: 0 0 0 10rpx;
}
.active-scroll{
  color: rgb(243, 227, 0)!important;
  border: 1px solid rgb(243, 227, 0)!important;
}
.scroll-taste{
  width: 100%;
  height: 100rpx;
}
.confirm{
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1px solid rgb(243, 227, 0);
  color: rgb(243, 227, 0);
  font-size: 26rpx;
  margin: 10rpx auto;
}