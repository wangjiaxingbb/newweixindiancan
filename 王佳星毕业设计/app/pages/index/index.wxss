/**index.wxss**/

.swiper {
  width: 100%;
  height: 350rpx;
}

.swiper image {
  width: 100%;
  height: 350rpx;
}

.tip {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  margin-top: 20rpx;
  text-align: center;
  padding: 20rpx 0 0 0;
}

.btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  border-radius: 8rpx;
  margin: auto;
  color: #fff;
  background-color: #ffda44;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.recommond {
  display: flex;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.recommond image{
  width: 100%;
  height: 360rpx;
  border-radius: 5px;
}
.recommond .rec-right{
  width: 49%;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
  padding-right: 10px;
}
.recommond .rec-left{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 49%;
  box-sizing: border-box;
  padding-left: 10px;
}
.recommond .rec-left image {
  height: 170rpx;
}
.hot-food {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding: 10px;
}
.hot-food image{
  width: 100%;
  height: 260rpx;
  border-radius: 6px;
}
