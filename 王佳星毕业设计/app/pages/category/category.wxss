/* pages/category/category.wxss */
.wrap {
  display: flex;
  background-color: #fff;
}
.scroll-cate-view{
  width: 200rpx;
  height: calc(100vh - 130rpx);
  background-color: #f9f9f9;
}
.scroll-cate-view view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 12px;
}
.scroll-cate-view view:last-child{
  border-bottom: none;
}
.active-view{
  background-color: #fff;
}
.scroll-food-view{
  width: calc(100vw - 200rpx);
  height: calc(100vh - 130rpx);
  background-color: #fff;
}
.food-item{
  display: flex;
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.food-item .food-info{
  position: relative;
  width: calc(100% - 130rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 14px;
}
.food-item .food-info:not(:first-child){
  margin-top: 5rpx;
}
.food-item .food-info .select-btn{
  position: relative;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 12px;
  color: rgb(243, 236, 236);
  background-color: rgb(226, 192, 0);
  margin-left:215rpx;
}
.food-item .food-info .food-title{
  width: 100%;
}
.food-item .img {
  border: 1px solid #ccc;
  text-align: center;
  color: #ccc;
  font-size: 12px;
  width: 110rpx;
  height: 110rpx;
  border-radius: 5px;
}
.price{
  position: absolute;
  top: 70rpx;
  left: 20rpx;
}
.food-item .food-info .select-btn .num {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
}